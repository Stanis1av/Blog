<h2>Post details:</h2>
<br/>
<p>
    <%= @row['content'] %>
      <br/>
      <br/>
    Added at <%= @row['created_date']%>
    <br/>
  </p>

  <h4>Comments:</h4>
  <br/>
  <% @comments.each do |comment| %>
    <p>
      <%= comment['content']%>
      <br/>
      <br/>
      <span style="font-size: 75%; color: #999">Added at <%= comment['created_date']%></span>
    </p>
    <hr/>
  <% end %>
<form action="/details/<%= @row['id']%>" method="POST" role="form">
    <div class="form-group">

      <textarea name="content" class="form-control" rows="6" placeholder="Type post text here"></textarea>
    </div>
  </br>
    <div class="form-group">
      <button type="submit" class="btn btn-primary">Enter</button>
    </div>
  </form>
